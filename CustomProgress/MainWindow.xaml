<Window x:Class="CustomProgress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomProgress"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded"> 
    <Grid>
        <ProgressBar Name="prgbar" Width="250" Height="25"></ProgressBar>
        <Label Name="lbl" Width="350" Height="25" Margin="0 85 0 0" Content="Label"></Label>
    </Grid>
</Window>
