<UserControl x:Class="CustomProgress.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomProgress"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ProgressBar x:Name="progressBar" Margin="20,0,20,20" Height="30" Minimum="0" Maximum="100"/>

        <Label Name="lblTitle" Width="350" Height="25" Margin="0 85 0 0" Content="Label"></Label>
        <Label Name="lblContent" Width="350" Height="25" Margin="0 250 0 0" Content="Label"></Label>
    </Grid>
</UserControl>
